{{#edit-panel editPanelProps=editPanelProps}}
  <div class="panel panel-primary">
    <div class="panel-body">
      {{#em-form model=model submitButton=false }}
        {{em-checkbox label=(t 'admin.payment_workflow.admission_deposit_required_label') property="value.admissionDepositRequired"}}
        {{em-checkbox label=(t 'admin.payment_workflow.followup_prepayment_required_label') property="value.followupPrepaymentRequired"}}
        {{em-checkbox label=(t 'admin.payment_workflow.outpatient_lab_prepayment_required_label') property="value.labPrepaymentRequired"}}
        {{em-checkbox label=(t 'admin.payment_workflow.outpatient_imaging_prepayment_required_label') property="value.imagingPrepaymentRequired"}}
        {{em-checkbox label=(t 'admin.payment_workflow.outpatient_medication_prepayment_required_label') property="value.medicationPrepaymentRequired"}}
      {{/em-form}}
    </div>
  </div>
{{/edit-panel}}